<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Odtwarzacz_muzyki"
             x:Class="Odtwarzacz_muzyki.MainPage"
             BackgroundColor="#2F2D2D">
    <Grid RowDefinitions="auto,*,auto" ColumnDefinitions="*">
        <!--<local:GlobalPlayer Grid.Row="0" x:Name="MiniPlayer"/>-->

        <!-- Lista playlist -->
        <CollectionView x:Name="PlaylistsCollectionView" Grid.Row="1" Margin="10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10" BackgroundColor="#333533" HeightRequest="80">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0" Source="{Binding ImagePath}" WidthRequest="60" HeightRequest="60"/>
                        <Label Grid.Column="1" Text="{Binding Name}" TextColor="White" VerticalOptions="Center" FontSize="18"/>
                        <Button Grid.Column="1" Text="Otwórz" HorizontalOptions="End" VerticalOptions="Center" Clicked="OpenPlaylist_Clicked"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Pasek nawigacji -->
        <Grid Grid.Row="2" RowDefinitions="*" ColumnDefinitions="*,*,*,*">
            <ImageButton Grid.Column="0" Source="home_icon_active.png" Clicked="Home_Clicked"/>
            <ImageButton Grid.Column="1" Source="search_icon.png" Clicked="Search_Clicked"/>
            <ImageButton Grid.Column="2" Source="files_icon.png" Clicked="Files_Clicked"/>
            <ImageButton Grid.Column="3" Source="account_icon.png" Clicked="Account_Clicked"/>
        </Grid>
    </Grid>
</ContentPage>
